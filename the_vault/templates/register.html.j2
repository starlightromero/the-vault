{% extends "base.html.j2" %}
{% block content %}

<main class="container">
  <div class="row">
    <div class="col">
      <h1 class="text-light">Register</h1>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <h3 class="text-primary">Your security is safe with us.</h3>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col">
      <form method="POST" class="w-50">
        {{ form.hidden_tag() }}
        <fieldset>
          <div class="form-group">
            {{ form.email.label }}
            {% if form.email.errors %}
              {{ form.email(class="is-invalid form-control", placeholder="name@email.com") }}
              <div class="invalid-feedback">
                {% for error in form.email.errors %}
                  {{ error }}
                {% endfor %}
              </div>
            {% else %}
              {{ form.email(class="form-control", placeholder="name@email.com") }}
            {% endif %}
          </div>
          <div class="form-group">
            {{ form.password.label }}
            {% if form.password.errors %}
              {{ form.password(class="is-invalid form-control", placeholder="Enter a password") }}
              <div class="invalid-feedback">
                {% for error in form.password.errors %}
                  {{ error }}
                {% endfor %}
              </div>
            {% else %}
              {{ form.password(class="form-control", placeholder="Enter a password") }}
            {% endif %}
          </div>
          <div class="form-group">
            {{ form.confirm_password.label }}
            {% if form.confirm_password.errors %}
              {{ form.confirm_password(class="is-invalid form-control", placeholder="Confirm the password") }}
              <div class="invalid-feedback">
                {% for error in form.confirm_password.errors %}
                  {{ error }}
                {% endfor %}
              </div>
            {% else %}
              {{ form.confirm_password(class="form-control", placeholder="Confirm the password") }}
            {% endif %}
          </div>
        </fieldset>
        <div class="mt-3">
          {{ form.submit(class="btn btn-primary w-100") }}
        </div>
      </form>
      <div class="mt-2">
        <small class="form-text">
          Already have an account? <a href="{{ url_for('users.login') }}" class="text-info">Login</a>
        </small>
      </div>
    </div>
  </div>
</main>

{% endblock %}
